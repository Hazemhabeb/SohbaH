<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back_pr"
    android:orientation="vertical"
    android:layoutDirection="ltr">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/details"
                android:layout_marginTop="90dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="Detials"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp" />
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="left"-->
                <!--android:layout_marginLeft="70dp"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:text="Email"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="15sp" />-->
            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:paddingLeft="5dp"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textColorHint="#FFF"
                android:textSize="15sp" />
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="left"-->
            <!--android:layout_marginLeft="70dp"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:text="Password"-->
            <!--android:textColor="#fff"-->
            <!--android:textSize="15sp" />-->
            <com.sohba_travel.sohba.Views.ShowHidePasswordEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/parent_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/fristname_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="  Frist Name"
                    android:textColor="#fff"
                    android:textColorHint="#FFF"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/lastname_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="  Last Name"
                    android:textColor="#fff"
                    android:textColorHint="#FFF"
                    android:textSize="15sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="Mobile"
                android:textColor="#fff"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/parent_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:weightSum="4">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="+20"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textColorHint="#FFF"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textColor="#fff"
                    android:textColorHint="#FFF"
                    android:textSize="15sp" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/parent_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Gender"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                    <EditText
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:hint="select"
                        android:gravity="center"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textColorHint="#FFF"
                        android:textSize="15sp" />
            </LinearLayout>




                    <EditText
                        android:id="@+id/Birth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Birth date"
                        android:textColor="#fff"
                        android:layout_marginTop="10dp"
                        android:focusable="false"
                        android:maxLines="1"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="#FFF"
                        android:textSize="15sp" />
        </LinearLayout>







            <ImageView
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:onClick="goToNext"
                android:src="@drawable/countinue" />

            <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->

            <!--android:layout_gravity="bottom"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/city" />-->
        </LinearLayout>
    </ScrollView>

    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="0">-->

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="100dp"-->

    <!--android:layout_gravity="bottom"-->
