<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

            <LinearLayout
                    android:id="@+id/add_prog_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tripImage"
                            android:src="@drawable/diversity"
                            />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        >

                    <com.sohba_travel.sohba.UI.SohbaEditText
                            android:id="@+id/etTripName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:hint="Trip name"
                            android:textSize="15sp"/>

                    <com.sohba_travel.sohba.UI.SohbaEditText
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:hint="City"
                            android:inputType="text"
                            android:textSize="15sp"/>

                    <com.sohba_travel.sohba.UI.SohbaEditText
                            android:id="@+id/etPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:hint="Total Price"
                            android:inputType="number"
                            android:textSize="15sp"/>

                    <com.sohba_travel.sohba.UI.SohbaEditText
                            android:id="@+id/etCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:hint="Category"
                            android:textSize="15sp"/>


                    <com.sohba_travel.sohba.UI.SohbaEditText
                            android:id="@+id/etTripDescrition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="start"
                            android:layout_marginTop="10dp"
                            android:hint="Trip Description"
                            android:textSize="15sp"/>

                    <com.sohba_travel.sohba.UI.SohbaEditText
                            android:id="@+id/etDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:hint="Duration"
                            android:inputType="text"
                            android:textSize="15sp"/>
                </LinearLayout>

                <com.sohba_travel.sohba.UI.SohbaTextView
                        android:id="@+id/tvtimeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="start"
                        android:layout_marginTop="10dp"
                        android:hint="Timeline"
                        android:textSize="15sp"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/ivAddTimeline"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_add_place"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_add"
                        android:textColor="@android:color/white"
                        />

                <android.support.v7.widget.RecyclerView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rvTimeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        />

                <Button
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:id="@+id/bAddTrip"
                        android:text="Add"
                        style="@style/Base.Widget.AppCompat.Button.Colored"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
