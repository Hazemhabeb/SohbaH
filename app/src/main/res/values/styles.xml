<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="SportCardStyle">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SportCardStyle.SportTile">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.SportSplashTile">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="SportCardStyle.SportSubtitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SportCardStyle.SportSplashSubtitle">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">10sp</item>-->
    </style>

    <style name="SportCardStyle.SportRound">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SportCardStyle.SportSplashRound">
        <item name="android:textStyle">italic</item>
        <!--<item name="android:textSize">10sp</item>-->
    </style>

    <style name="SportCardStyle.Time">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.splashTime">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="SportCardStyle.DayPart">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SportCardStyle.splashDayPart">
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">12sp</item>-->
    </style>

    <style name="changefont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:fontFamily">Montserrat-Regular.otf</item>
    </style>

    <style name="AppTheme_login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#03a9f4</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:background">#fff</item>
    </style>

</resources>
